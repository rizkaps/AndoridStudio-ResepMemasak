<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#DB7093"
    tools:context="com.example.windows10.yukmasak.Buatdiarymasak">

    <RelativeLayout
        android:layout_width="310dp"
        android:layout_height="500dp"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:background="#FFC0CB">

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:paddingBottom="10dp"
            android:paddingLeft="20dp"
            android:paddingRight="20dp"
            android:paddingTop="10dp">

            <ImageView
                android:layout_marginLeft="190dp"
                android:layout_width="100dp"
                android:layout_height="60dp"
                android:src="@drawable/logoberanda"/>

            <EditText
                android:id="@+id/editText1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignLeft="@+id/textView1"
                android:layout_below="@+id/textView1"
                android:inputType="number"
                android:maxLength="10">
                <requestFocus />
            </EditText>

            <TextView
                android:id="@+id/textView1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_alignParentTop="true"
                android:text="Nomer"
                />

            <TextView
                android:id="@+id/textView2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignLeft="@+id/editText1"
                android:layout_below="@+id/editText1"
                android:layout_marginTop="10dp"
                android:text="Nama Masakan"
                />

            <EditText
                android:id="@+id/editText2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignLeft="@+id/textView2"
                android:layout_below="@+id/textView2"
                android:inputType="text"
                android:maxLength="25"
                />

            <TextView
                android:id="@+id/textView3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignLeft="@+id/editText2"
                android:layout_below="@+id/editText2"
                android:layout_marginTop="10dp"
                android:text="Alat"
                />

            <EditText
                android:id="@+id/editText3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignLeft="@+id/textView3"
                android:layout_below="@+id/textView3"
                android:inputType="text"
                />

            <TextView
                android:id="@+id/textView4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignLeft="@+id/editText3"
                android:layout_below="@+id/editText3"
                android:layout_marginTop="10dp"
                android:text="Bahan"
                />

            <EditText
                android:id="@+id/editText4"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignLeft="@+id/textView4"
                android:layout_below="@+id/textView4"
                android:inputType="text"
                />

            <TextView
                android:id="@+id/textView5"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignLeft="@+id/editText4"
                android:layout_below="@+id/editText4"
                android:layout_marginTop="10dp"
                android:text="Catatan tambahan"
                />

            <EditText
                android:id="@+id/editText5"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignLeft="@+id/textView5"
                android:layout_below="@+id/textView5"
                android:inputType="text"
                />

            <Button
                android:id="@+id/btnCamera"
                android:layout_width="110dp"
                android:layout_height="40dp"
                android:layout_marginTop="370dp"
                android:background="@color/colorAccent"
                android:text="Add Photo" />

            <ImageView
                android:id="@+id/image"
                android:layout_width="130dp"
                android:layout_height="70dp"
                android:layout_marginTop="360dp"
                android:layout_marginLeft="150dp"
                />

            <Button
                android:id="@+id/button1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignLeft="@+id/editText5"
                android:layout_alignParentBottom="true"
                style="?android:attr/borderlessButtonStyle"
                android:drawableLeft="@drawable/savelogo"
                android:text="Simpan"
                />

            <Button
                android:id="@+id/button2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Kembali"
                android:onClick="back"
                style="?android:attr/borderlessButtonStyle"
                android:drawableLeft="@drawable/backlogo"
                android:layout_alignParentBottom="true"
                android:layout_alignRight="@+id/editText5"
                android:layout_alignEnd="@+id/editText5"
                />

        </RelativeLayout>

    </RelativeLayout>

</RelativeLayout>
